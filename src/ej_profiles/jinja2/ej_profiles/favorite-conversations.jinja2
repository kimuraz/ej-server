{% extends 'base.jinja2' %}
{% from 'ej_conversations/components/conversation-list.jinja2' import conversation_list_static %}

{% block content %}
    {% if conversations %}
        {{ conversation_list_static(conversations, _('Favorite conversations'), _('Participate of conversations and give your opinion with comments and votes!')) }}
    {% else %}
        <div class="CenteredContainer">
            <h1>{% trans %}Favorite conversations{% endtrans %}</h1>
            <p>{% trans %}You do not have any favorite conversations!{% endtrans %}</p>
        </div>
    {% endif %}
{% endblock %}
