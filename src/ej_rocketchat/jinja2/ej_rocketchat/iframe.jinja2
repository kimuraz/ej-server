{% extends 'base.jinja2' %}
{% set page_title = _('Panel') %}
{% set hide_lower_navbar = True %}

{% block main %}
    {% if ask_password %}
        <div class="CenteredContainer">
            <dl>
                <dt>{% trans %}Admin user{% endtrans %}</dt>
                <dd>{{ username }}</dd>
                <dt>{% trans %}Access token{% endtrans %}</dt>
                <dd>{{ auth_token }}</dd>
            </dl>
            <form method="post">
                {{ csrf_input }}
                {{ ask_password_form.as_p() }}
                <input type="submit" class="Button" value="{{ _('Send') }}" name="send">
            </form>
        </div>
    {% else %}
        <iframe id="iframe-rocket" class="RocketIFrame" src="{{ rocketchat_url }}"></iframe>
        <style>
            /* Disable lower navigation bar */
            .Header-lowerNav {
                display: none;
            }
        </style>
        <script>
            $('iframe').ready(function(){
                console.log("{{ user_id }}");
                console.log("{{ auth_token }}");
                // Login in Rocket.Chat using js.
                (function () {
                    console.log("rocket.chat token: " + "{{ auth_token.replace('\"', '\\\\\"') }}");
                    document.getElementById('iframe-rocket').contentWindow.postMessage({
                        externalCommand: 'login-with-token',                        
                        event: 'login-with-token',
                        loginToken: "{{ auth_token }}",
                        userId: "{{ user_id }}",
                    }, '*')
                    console.log(document.getElementById('iframe-rocket').contentWindow);
                })();
            });
        </script>
    {% endif %}
{% endblock %}

